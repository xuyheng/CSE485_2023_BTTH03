{% extends 'admin/base_admin.html.twig' %}

{% block content %}
	<!-- <h3 class="text-center text-uppercase mb-3 text-primary">CẢM NHẬN VỀ BÀI HÁT</h3> -->
	<div class="row">
		<div class="col-sm">
			<a href="index.php?controller=category&action=add" class="btn btn-success">Thêm mới</a>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Tên thể loại</th>
						<th scope="col">Số lượng bài viết</th>
						<th>Sửa</th>
						<th>Xóa</th>
					</tr>
				</thead>
				<tbody>
					{% set count = 0 %}
					{% for category in categories %}
						{% set count = count + 1 %}
						<tr>
							<th scope="row">
								{{count}}
							</th>
							<td>
                                {{category.ten_tloai}}
							</td>
							<td>
                                {{category.SLBaiViet}}
							</td>
							<td>
								<a href="index.php?controller=category&action=edit&id={{category.ma_tloai}}">
									<i class="fa-solid fa-pen-to-square"></i>
								</a>
							</td>
							<td>
								<a onclick="return confirm('Ban co muon xoa khong');" href="/CSE485_2023_BTTH03/bai_3/index.php?controller=category&action=delete&id={{category.ma_tloai}}">
									<i class="fa-solid fa-trash"></i>
								</a>
							</td>
						</tr>
                        {% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
