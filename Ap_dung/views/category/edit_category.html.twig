{% extends 'admin/base_admin.html.twig' %}

{% block content %}
	<!-- <h3 class="text-center text-uppercase mb-3 text-primary">CẢM NHẬN VỀ BÀI HÁT</h3> -->
	<div class="row">
		<div class="col-sm">
			<h3 class="text-center text-uppercase fw-bold">Sửa thông tin thể loại</h3>
			{% for category in findCategory %}
				<form action="index.php?controller=category&action=edit&id={{category.ma_tloai}}" method="post">
					<div class="input-group mt-3 mb-3">
						<span class="input-group-text" id="lblTgId">Mã thể loại</span>
						<input type="text" class="form-control" name="ma_tloai" id="ma_tloai" value="{{category.ma_tloai}}" readonly>
					</div>
					<div class="input-group mt-3 mb-3">
						<span class="input-group-text" id="lblTgName">Tên thể loại</span>
						<input type="text" class="form-control" name="ten_tloai" id="ten_tloai" value="{{category.ten_tloai}}" style="border-top-right-radius: 7px; border-bottom-right-radius:7px">
						<div class="form-group  float-end " style="position:absolute; top:50px; left:1130px">
							<input type="submit" name="save" value="Lưu lại" class="btn btn-success">
							<a href="index.php?controller=category&action=list" class="btn btn-warning ">Quay lại</a>
						</div>
					{% endfor %}
				</form>
			</div>
		</div>
	{% endblock %}
